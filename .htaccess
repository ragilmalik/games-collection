# =============================================================================
# SECURITY - Balanced for Development/Games
# =============================================================================

# Prevent directory browsing (security best practice)
Options -Indexes

# Protect .htaccess file itself
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Block access to sensitive files
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# Block access to hidden system files (except .well-known)
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} "!(^|/)\.well-known/([^./]+./)+" [NC]
    RewriteCond %{SCRIPT_FILENAME} -d [OR]
    RewriteCond %{SCRIPT_FILENAME} -f
    RewriteRule "(^|/)\." - [F]
</IfModule>

# Disable Server Signature
ServerSignature Off

# =============================================================================
# PHP SETTINGS (if using PHP)
# =============================================================================

<IfModule mod_php.c>
    # Increase memory limit
    php_value memory_limit 256M

    # Increase max upload size
    php_value upload_max_filesize 100M
    php_value post_max_size 100M

    # Increase max execution time
    php_value max_execution_time 300

    # Enable error reporting for development
    # php_flag display_errors on
    # php_value error_reporting E_ALL

    # Disable error reporting for production
    php_flag display_errors off
    php_value error_reporting 0
</IfModule>

# =============================================================================
# ADDITIONAL FEATURES
# =============================================================================

# Enable ETag (helps with caching)
FileETag MTime Size

# Set default charset
AddDefaultCharset utf-8

# Set default language
DefaultLanguage en-US

# Force UTF-8 for specific file types
<IfModule mod_mime.c>
    AddCharset utf-8 .atom .css .js .json .rss .vtt .webapp .xml
</IfModule>

# =============================================================================
# WEBSOCKET SUPPORT (for multiplayer games)
# =============================================================================

# Note: WebSocket support depends on server configuration
# These headers help with WebSocket connections
<IfModule mod_headers.c>
    Header set Connection "Upgrade"
</IfModule>

# =============================================================================
# SERVICE WORKER & PWA SUPPORT
# =============================================================================

# Proper MIME type for service workers
<Files "sw.js">
    Header set Service-Worker-Allowed "/"
</Files>

<Files "service-worker.js">
    Header set Service-Worker-Allowed "/"
</Files>

# =============================================================================
# END OF HTACCESS CONFIGURATION
# =============================================================================

# USAGE NOTES:
# 1. Upload this file to your public_html directory on Hostinger
# 2. Make sure the file is named exactly ".htaccess" (with the dot)
# 3. Set file permissions to 644
# 4. Uncomment any optional features you need (HTTPS redirect, etc.)
# 5. Some features may require specific Apache modules to be enabled
# 6. Contact Hostinger support if certain features don't work
